<?xml version="1.0" encoding="utf-8"?>
<manifest package="chat.mobilecomputationproject"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.login_register.LoginActivity"
            android:label="@string/title_activity_login">
        </activity>
        <activity
            android:name=".activities.login_register.RegisterActivity"
            android:label="@string/title_activity_register">
        </activity>
        <activity
            android:name=".activities.SplashscreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.chat_room.select_chat_room.SelectChatRoomActivity"
            android:label="@string/title_activity_select_chat_room"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activities.chat_room.create_chat_room.CreateChatRoomActivity"
            android:label="@string/title_activity_create_chat_room"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
